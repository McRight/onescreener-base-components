{
  "name": "@optune/onescreener-base-components",
  "version": "0.0.1",
  "description": "Onescreener Base Components",
  "main": "src/index.js",
  "devDependencies": {
    "@storybook/addon-actions": "^5.0.0",
    "@storybook/addon-knobs": "^5.0.0",
    "@storybook/addon-links": "^5.0.0",
    "@storybook/addons": "^5.0.0",
    "@storybook/react": "^5.0.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-runtime": "^6.26.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "rollup": "^1.6.0",
    "rollup-analyzer-plugin": "^1.2.0",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-url": "^2.2.0",
    "styled-components": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "styled-components": "^4.0.2"
  },
  "scripts": {
    "lint": "eslint .",
    "build": "rollup -c config/dev.js",
    "prepare": "rollup -c config/prod.js",
    "test": "echo \"t'Saul Goodman\" && exit 0",
    "storybook": "start-storybook --ci -p 6006",
    "build-storybook": "build-storybook"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "^16.4.2"
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "2018",
      "sourceType": "module"
    },
    "plugins": [
      "import",
      "prettier",
      "react"
    ],
    "extends": [
      "plugin:react/recommended",
      "prettier"
    ],
    "rules": {
      "max-lines": "error",
      "import/no-unresolved": "error",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "prettier/prettier": "error",
      "react/require-default-props": "off",
      "react/no-array-index-key": "off",
      "react/forbid-prop-types": "off"
    }
  },
  "eslintIgnore": [
    "lib/**/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/optune/onescreener-base-components.git"
  },
  "keywords": [
    "react"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "optune",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/optune/onescreener-base-components/issues"
  },
  "homepage": "https://github.com/optune/onescreener-base-components#readme"
}
