{
  "name": "@optune/onescreener-base-components",
  "version": "1.0.0",
  "description": "Onescreener Base Components",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "remove-react": "rm -rf node_modules/react node_modules/react-dom  node_modules/styled-components",
    "lint": "eslint .",
    "prepublishOnly": "npm run build:prod",
    "build": "meteor npm run remove-react && rollup -c config/dev.js",
    "build:prod": "meteor npm run remove-react && rollup -c config/prod.js",
    "watch": "meteor npm run remove-react && rollup -c config/dev.js -w",
    "svg": "styled-svg src/components/icons/*.svg",
    "test": "echo \"t'Saul Goodman\" && exit 0",
    "storybook": "start-storybook --ci -p 6006",
    "build-storybook": "build-storybook"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "^16.4.2"
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "2018",
      "sourceType": "module"
    },
    "plugins": [
      "import",
      "prettier",
      "react"
    ],
    "extends": [
      "plugin:react/recommended",
      "prettier"
    ],
    "rules": {
      "max-lines": "error",
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "prettier/prettier": "error",
      "react/require-default-props": "off",
      "react/no-array-index-key": "off",
      "react/forbid-prop-types": "off"
    }
  },
  "eslintIgnore": [
    "lib/**/*.js"
  ],
  "browserslist": "last 2 chrome versions or last 2 firefox versions",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true,
          "displayName": true
        }
      ]
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.2.4",
    "@storybook/addon-knobs": "^5.2.4",
    "@storybook/addon-links": "^5.2.4",
    "@storybook/addons": "^5.2.4",
    "@storybook/react": "^5.2.4",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-runtime": "^6.26.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.9",
    "prettier": "^1.18.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "rollup": "^1.25.0",
    "rollup-plugin-analyzer": "^3.0.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-url": "^2.2.4",
    "styled-components": "^4.1.3",
    "styled-svg": "^2.4.7"
  },
  "dependencies": {
    "dateformat": "^3.0.3",
    "isomorphic-fetch": "^2.2.1",
    "react-html-parser": "^2.0.2",
    "react-player": "^1.13.0",
    "react-responsive": "^8.0.1"
  },
  "peerDependencies": {
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "styled-components": "^4.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/optune/onescreener-base-components.git"
  },
  "keywords": [
    "react"
  ],
  "files": [
    "lib/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "author": "optune",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/optune/onescreener-base-components/issues"
  },
  "homepage": "https://github.com/optune/onescreener-base-components#readme",
  "directories": {
    "lib": "lib"
  }
}
